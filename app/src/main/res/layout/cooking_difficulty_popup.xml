<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/Dark.Mode.2"
    android:padding="8dp">


    <Button
        android:id="@+id/beginnerDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lightmode_button_outlines"
        android:textColor="@color/Light.Mode.Text"
        android:layout_marginTop="2dp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:padding="9dp"
        android:text="@string/beginner"/>

    <Button
        android:id="@+id/intermediateDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lightmode_button_outlines"
        android:textColor="@color/Light.Mode.Text"
        android:typeface="monospace"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:padding="9dp"
        android:text="@string/intermediate"/>

    <Button
        android:id="@+id/advancedDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lightmode_button_outlines"
        android:padding="9dp"
        android:layout_marginTop="2dp"
        android:text="@string/advanced"
        android:textColor="@color/Light.Mode.Text"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/backButton"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="bottom|start"
        android:background="@drawable/lightmode_button_outlines"
        android:text="@string/back"
        android:textColor="@color/Light.Mode.Text"/>

</LinearLayout>